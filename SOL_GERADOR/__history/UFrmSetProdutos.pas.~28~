   AddField('DES_UNIDADE',3 ,' ',tpRight, ftpString );
   AddField('QTD_RECEITA',10 ,'0',tpLeft, ftpFloat, '0.000' );
   AddField('QTD_RENDIMENTO',10 ,'0',tpLeft, ftpFloat, '0.000' );
 end;
  Result := Layout;
end;

Function TProdutos.GetFieldProdutoComprador : TLayout;
