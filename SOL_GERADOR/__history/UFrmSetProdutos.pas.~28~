   AddField('COD_PRODUTO',8 ,'0',tpLeft, ftpInteger );
   AddField('COD_LOJA',10 ,'0',tpLeft, ftpInteger );
   AddField('DTA_ALTERACAO',10 ,' ',tpRight, ftpDateTime,'dd/mm/yyyy' );
 end;
 Result := Layout;
end;

